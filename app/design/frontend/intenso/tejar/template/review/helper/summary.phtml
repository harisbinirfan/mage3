<?php if ($this->getReviewsCount()): ?>
    <div class="ratings">
        <?php if ($this->getRatingSummary()):?>
            <div class="rating-box">
                <div class="rating" style="width:<?php echo $this->getRatingSummary() ?>%">
                    <meta content="<?php echo $this->getRatingSummary()/20 ?>"/>
                    <meta content="<?php echo $this->getReviewsCount(); ?>" />
                </div>
            </div>
        <?php endif;?>
        <span class="rating-links">
            <a href="<?php echo $this->getReviewsUrl() ?>"><?php echo $this->getReviewsCount(); ?> <?php echo Mage::helper('itactica_extendedreviews')->__('customer reviews') ?></a>
            <a href="<?php echo $this->getReviewsUrl() ?>#post-review"><?php echo Mage::helper('itactica_extendedreviews')->__('Add your review') ?></a>
        </span>
    </div>
<?php elseif ($this->getDisplayIfEmpty()): ?>
    <div class="ratings no-rating">
        <a href="<?php echo $this->getReviewsUrl() ?>#post-review"><?php echo $this->__('Be the first to review this product') ?></a>
    </div>
<?php endif; ?>

