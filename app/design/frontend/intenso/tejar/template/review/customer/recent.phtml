<?php if( $this->getCollection() && $this->count()): ?>
<section class="section-offset">		
	<div class="box-account box-recent">
		<div class="box-head">		
			<h3><?php echo $this->__('My Recent Reviews') ?></h3>
			<a href="<?php echo $this->getAllReviewsUrl() ?>"><?php echo $this->__('View All Reviews') ?></a>
		</div>
	</div>
	<table class="table_type_4 wb-table table-seprater orders_table" id="my-reviews-table">
           <thead>
		   <tr>
		   <th class="td-date">Date</th>
		   <th class="td-name">Name</th>
		   <th class="td-rating">Star</th>
		   <th class="td-review">Review</th>
		   <th class="td-details">Action</th>
			</tr>
		   </thead>
            <tbody>
                <?php foreach ($this->getCollection() as $_review): ?>
                <tr>
					
                    <td class="td-date"><span class="nobr"><?php echo $this->dateFormat($_review->getReviewCreatedAt()); ?></span></td>
                    <td class="td-name"><h2 class="product-name"><a  class="truncate" href="<?php echo $this->getProductLink() ?>id/<?php echo $_review->getEntityPkValue() ?>"><?php echo $this->escapeHtml($_review->getName()) ?></a></h2></td>
                    <td class="td-rating">
                    <?php if($_review->getSum()): ?>
                        <div class="rating-box">
                            <div class="rating" style="width:<?php echo ( $_review->getSum() / $_review->getCount() ) ?>%;"></div>
                        </div>
                    <?php endif; ?>
                    </td>
                    <td class="td-review"><?php echo $this->helper('review')->getDetailHtml($_review->getDetail()) ?></td>
                    <td class="td-details"><a href="<?php echo $this->getReviewLink() ?>id/<?php echo $_review->getReviewId() ?>" class="nobr"><?php echo $this->__('View Details') ?></a></td>
                </tr>
                <?php endforeach; ?>
            </tbody>
        </table>
   
    <script type="text/javascript">decorateList('my_recent_reviews');</script>
	</section>
<?php endif; ?>
