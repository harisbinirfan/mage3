<?xml version="1.0"?>
<config>
	<modules>
        <Tejar_Observpricing>
            <version>0.0.1</version>
        </Tejar_Observpricing>
    </modules>
    <global>
		<helpers>
			<tejarobservpricing>
			 <class>Tejar_Observpricing_Helper</class>
			</tejarobservpricing>
		</helpers>
        <models>
            <tejarobservpricing>
                <class>Observpricing_Model</class>
            </tejarobservpricing>
						<catalog>
							<rewrite>
								<product_action>Tejar_Observpricing_Model_Product_Action</product_action>
								<product_attribute_backend_price>Tejar_Observpricing_Model_Product_Attribute_Backend_Price</product_attribute_backend_price>
							</rewrite>
						</catalog>

						<catalog_resource>
							<rewrite>
								<product_action>Tejar_Observpricing_Model_Resource_Product_Action</product_action>
							</rewrite>
						</catalog_resource>
        </models>
		<blocks>
            <tejar_observpricing>
                <class>Tejar_Observpricing_Block</class>
            </tejar_observpricing>
        </blocks>
    </global>
	<frontend>
		<events>
            <catalog_product_get_final_price>
                <observers>
                    <tejar_observpricing_model_observer>
                        <type>singleton</type>
                        <class>Tejar_Observpricing_Model_Observer</class>
                        <method>simpleProductPrice</method>
                    </tejar_observpricing_model_observer>
                </observers>
            </catalog_product_get_final_price>
        </events>
	</frontend>
	<adminhtml>
		<events>
            <catalog_product_prepare_save>
                <observers>
                    <tejar_observpricing_model_observer>
                        <type>singleton</type>
                        <class>Tejar_Observpricing_Model_Observer</class>
                        <method>catalogProductPrepareSave</method>
                    </tejar_observpricing_model_observer>
                </observers>
            </catalog_product_prepare_save>
            <catalog_product_save_after>
                <observers>
                    <tejar_observpricing_model_observer>
                        <type>singleton</type>
                        <class>Tejar_Observpricing_Model_Observer</class>
                        <method>catalogProductSaveAfter</method>
                    </tejar_observpricing_model_observer>
                </observers>
            </catalog_product_save_after>
            <catalog_product_delete_after_done>
                <observers>
                    <tejar_observpricing_model_observer>
                        <type>singleton</type>
                        <class>Tejar_Observpricing_Model_Observer</class>
                        <method>catalogProductDeleteAfterDone</method>
                    </tejar_observpricing_model_observer>
                </observers>
            </catalog_product_delete_after_done>   
			<adminhtml_catalog_product_edit_prepare_form>
    			<observers>
    				<tejar_adminhtml_catalog_product_edit_prepare_form>
    					<type>singleton</type>
    					<class>Tejar_Observpricing_Model_Observer</class>
    					<method>adminhtmlCatalogProductEditPrepareForm</method>
    				</tejar_adminhtml_catalog_product_edit_prepare_form>
    			</observers>
    		</adminhtml_catalog_product_edit_prepare_form>
           <!-- <adminhtml_block_html_before>
                <observers>
                    <tejar_observpricing_model_observer>
                        <type>singleton</type>
                        <class>Tejar_Observpricing_Model_Observer</class>
                        <method>catalogProductAttributeUpdateBefore</method>
                    </tejar_observpricing_model_observer>
                </observers>
            </adminhtml_block_html_before>

			<catalog_product_massupdate_pricing_before>
                <observers>
                    <tejar_observpricing_model_observer>
                        <type>singleton</type>
                        <class>Tejar_Observpricing_Model_Observer</class>
                        <method>catalogProductMassupdatePricingBefore</method>
                    </tejar_observpricing_model_observer>
                </observers>
            </catalog_product_massupdate_pricing_before>
			-->
			<catalog_product_massupdate_attribute_custom>
                <observers>
                    <tejar_observpricing_model_observer>
                        <type>singleton</type>
                        <class>Tejar_Observpricing_Model_Observer</class>
                        <method>catalogProductMassupdateAttributeCustom</method>
                    </tejar_observpricing_model_observer>
                </observers>
            </catalog_product_massupdate_attribute_custom>
        </events>
	</adminhtml>
	<admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <tejarobservpricing before="Mage_Adminhtml">Tejar_Observpricing_Adminhtml</tejarobservpricing>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
</config>
