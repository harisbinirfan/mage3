<config>
    <tabs>
        <apptrian_extensions>
            <sort_order>500</sort_order>
        </apptrian_extensions>
    </tabs>
    <sections>
        <apptrian_imageoptimizer translate="label">
            <sort_order>250</sort_order>
            <groups>
                <utility translate="label">
					<fields>
						 <imagick translate="label comment">
							<label>ImageMagick Utilities</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>15</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<comment>Overwrite all Utilities.</comment>
						</imagick>
						<imagick_options translate="label comment tooltip">
							<label>ImageMagick Utility JPG</label>
							<frontend_type>text</frontend_type>
							<backend_model>apptrian_imageoptimizer/config_options</backend_model>
							<sort_order>16</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<comment>Options for optimization of .jpg files.</comment>
							<tooltip><![CDATA[The <strong>%filepath%</strong> will be substituted with image file path by the extension.]]></tooltip>
						</imagick_options>
						<imagick_options_png translate="label comment tooltip">
							<label>ImageMagick Utility PNG</label>
							<frontend_type>text</frontend_type>
							<backend_model>apptrian_imageoptimizer/config_options</backend_model>
							<sort_order>17</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<comment>Options for optimization of .png files.</comment>
							<tooltip><![CDATA[The <strong>%filepath%</strong> will be substituted with image file path by the extension.]]></tooltip>
						</imagick_options_png>
						<imagick_options_gif translate="label comment tooltip">
							<label>ImageMagick Utility GIF</label>
							<frontend_type>text</frontend_type>
							<backend_model>apptrian_imageoptimizer/config_options</backend_model>
							<sort_order>18</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<comment>Options for optimization of .gif files.</comment>
							<tooltip><![CDATA[The <strong>%filepath%</strong> will be substituted with image file path by the extension.]]></tooltip>
						</imagick_options_gif>
                    </fields>
                </utility>
            </groups>
        </apptrian_imageoptimizer>
    </sections>
</config>
